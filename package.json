{
  "name": "smart-contract-repo-skelaton",
  "version": "1.0.0",
  "description": "Smart contract skelaton for a quick start development",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test:local": "npx truffle test --network ganache-cli",
    "ganache:local": "npx ganache-cli",
    "lint:contracts": "npx solhint 'contracts/**/*.sol'",
    "format:prettier": "npx prettier --write",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nufyatese/smartContracts.git"
  },
  "keywords": [
    "solidity",
    "smart",
    "contract",
    "dapp",
    "ethereum"
  ],
  "author": "nufyatese",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nufyatese/smartContracts/issues"
  },
  "homepage": "https://github.com/nufyatese/smartContracts#readme",
  "dependencies": {
    "dotenv": "^10.0.0",
    "rimraf": "^3.0.2",
    "solc": "^0.8.9",
    "truffle": "^5.4.15",
    "truffle-assertions": "^0.9.2",
    "web3": "^1.6.0"
  },
  "devDependencies": {
    "ganache-cli": "^6.12.2",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "mocha": "^9.1.3",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17"
  },
  "lint-staged": {
    "*.sol": "npx run solhint"
  }
}
